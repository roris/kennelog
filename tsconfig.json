{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "strict": true,

    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",

    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true
  },
  "atom": {
    "rewriteTsconfig": false
  }
}
